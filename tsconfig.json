{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "commonjs",   
    "moduleResolution": "node",                            
    "esModuleInterop": true,                                    
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,   
    "strictPropertyInitialization": false,      
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]                                                         
  },
  "include": ["src/**/*.ts"] 
}
